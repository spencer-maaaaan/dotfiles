# setting variables
set $mod Mod4
set $term urxvt -e fish
set $filemanager urxvt -e ranger 
set $browser firefox
set $chat discord
set $texteditor urxvt code
set $musicplayer urxvt -e cmus
set $sysmonitor urxvt -e ytop
set $volumectl pavucontrol


# setting borders/gaps
gaps inner 10
gaps outer 0
default_border pixel 2

# settings
focus_wrapping force

# colors of window borders
# class                 border  backgr. text    indicator child_border
client.focused          #a89984 #a89984 #ebdbb2 #a89984   #a89984
client.focused_inactive #282828 #a89984 #ebdbb2 #a89984   #282828
client.unfocused        #282828 #282828 #a89984 #282828   #282828
client.urgent           #282828 #cc241d #ebdbb2 #cc241d   #cc241d

# font for window titlebars
font pango:terminus 8

# running some apps on startup
exec_always --no-startup-id bash $HOME/.config/polybar/launch.sh
exec_always --no-startup-id dunst
exec --no-startup-id picom -b
exec xwallpaper --zoom ~/.config/wall.png
exec xset s -dpms && xset s 3600 3600

# rules for scratchpad applications
for_window [instance="dropdown_*"] floating enable
for_window [instance="dropdown_*"] move scratchpad
for_window [instance="dropdown_*"] sticky enable

# scratchpad applications
exec urxvt -name "dropdown_term" -e fish

# binding to show scratchpad apps
bindsym $mod+t [instance="dropdown_term"] scratchpad show

# application shortcuts
bindsym $mod+Return exec $term
bindsym $mod+e exec $filemanager
bindsym $mod+b exec $browser
bindsym $mod+i exec $chat
bindsym $mod+c exec $texteditor
bindsym $mod+F2 exec $sysmonitor
bindsym $mod+F3 exec $volumectl
bindsym $mod+F5 exec $musicplayer
bindsym $mod+F6 exec firefox --new-window https://www.youtube.com/feed/subscriptions

# kill focused window
bindsym $mod+w kill

# start rofi application runner
bindsym $mod+r exec rofi -show run

# start rofi window pager
bindsym $mod+Tab exec rofi -show window

# window manipulation
# mouse + mod for window moving
floating_modifier $mod

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Control+Left move left
bindsym $mod+Control+Down move down
bindsym $mod+Control+Up move up
bindsym $mod+Control+Right move right

# resize focused window
bindsym $mod+Shift+Left resize shrink width 5 px or 5 ppt
bindsym $mod+Shift+Down resize grow height 5 px or 5 ppt
bindsym $mod+Shift+Up resize shrink height 5 px or 5 ppt
bindsym $mod+Shift+Right resize grow width 5 px or 5 ppt

# activate horizontal split mode
bindsym $mod+h split h

# activate vertical split mode
bindsym $mod+v split v

# enter fullscreen mode for the focused window
bindsym $mod+f fullscreen toggle

# toggle tiling / floating for focused window
bindsym $mod+Shift+space floating toggle

# focus the parent of container
bindsym $mod+a focus parent

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1, workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2, workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3, workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4, workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5, workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6, workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7, workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8, workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9, workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10, workspace number $ws10


# reload the configuration file
# bindsym $mod+Shift+r reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exit
